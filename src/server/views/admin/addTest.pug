extends ../shared/layout

block main-content
    form(method="post")
        div(class="col-md-offset-3 col-md-6")
            label(for="title") Title
            input(id="title" name="title" class="form-control" type="text" placeholder="Enter the title of test")

            label(for="contest") Contest*
            select(id="contest" class="form-control" name="contest")
                option(value="") Choose Contest
                each contest in contests
                    option(value=contest._id) #{contest.title}

            div(id="problemGroup")
                label(for="problem") Problem*
                select(id="problem" class="form-control" name="problem")

            label(for="input") Input
            textarea(id="input" name="input" class="form-control") The input of the test. It has priority over input with file!

            include ../shared/upload

            label(for="output") Output
            textarea(id="output" name="output" class="form-control") The output of the test. It has priority over output with file!

            include ../shared/upload2

            br
            input(type="submit" class="btn btn-lg" value="Create")
            hr

block page-scripts
    script(src="/lib/loadContests.js")
    script(src="/lib/fileUpload.js")
    script(src="/lib/fileUpload2.js")
