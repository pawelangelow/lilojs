extends ../shared/layout

block main-content
  h2 #{contest.title}
  br
  if contest.description.length !== 0
    blockquote
      p
        | #{contest.description}

  br

  if problems.length !== 0
    table.table.table-striped.table-hover
      thead
        tr
          th #
          th Problem
          th Solve
      tbody
        each problem, i in problems
          tr
            td #{i+1}
            td #{problem.title}
            td
              a.btn.btn-primary.btn-sm(href='/problem/' + problem._id) Solve
  else
    div
      p There are no problems in this contest.
